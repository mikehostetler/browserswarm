.row
  .span10.offset2
    - if ('undefined' !== typeof errors && errors.length)
      ul#errors
        - each error in errors
          li.error= error

.row-fluid
  .span2
  .span6
    #register-hero-unit.hero-unit
      h1 Brilliant Continuous Deployment.
      br
      p Strider is a continuous delivery platform.
      p Learn more at 
      a(href='http://github.com/Strider-CD/strider') github.com/Strider-CD/strider
  .span3
    #register-box.row-fluid.hero-subunit
      h3 Register
      br
      form(action='/register', method='POST')
        div.clearfix
          label(for='invite_code') Invite code
          div.input
            input.xlarge(type='text', name='invite_code', value='#{code}')
          br
          div.clearfix
            label(for=everyauth.password.loginFormFieldName) Email
            div.input
              input.xlarge(type='text', name=everyauth.password.loginFormFieldName)
          div.clearfix
            label(for=everyauth.password.passwordFormFieldName) Password
            div.input
              input.xlarge(type='password', name=everyauth.password.passwordFormFieldName)
          div.actions
            input.btn.primary(type='submit', value='Register')

script
  $(document).ready(function() {
    $('#layout-header').hide();
    $('#navbar-signin-form').hide();
    var new_height=$('#invite-box').innerHeight()+$('#register-box').innerHeight()-90;
    
    if (window.width >= 768) {
        $('#register-hero-unit').outerHeight(503);
      }
  });
